<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_gyroid">

    <ImageView
        android:id="@+id/iv_gyroid"
        android:layout_width="@dimen/nookapp_80dp"
        android:layout_height="@dimen/nookapp_80dp"
        android:src="@drawable/bugsbutton"
        android:contentDescription="@string/nookapp_criaturas"
        android:alpha="1"
        android:layout_margin="@dimen/margin_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_check"
        />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/margin_42dp"
        android:layout_height="@dimen/margin_42dp"
        android:src="@drawable/checkedicon"
        android:layout_marginBottom="@dimen/margin_20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_gyroid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/checktextdescription" />

</androidx.constraintlayout.widget.ConstraintLayout>